@page "{id}"
@model WebASPPizzaTime.Pages.Commodityes.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


<h1 class="text-center">Delete Confirmation</h1>

<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 ofset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4>Commodity ID: <span class="text-primary">@Model.Commodity.Id</span></h4><hr />
                <h4>Commodity Email: <span class="text-primary">@Model.Commodity.Email</span></h4><hr />
                <h4>Department: <span class="text-primary">@Model.Commodity.Department</span></h4><hr />
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col text-center">
            <h5>Are you shure want delete employee - @Model.Commodity.Name?</h5>

            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a class="btn btn-success" asp-page="/Commodityes/Commodityes">No</a>
            </form>
        </div>
    </div>
</div>